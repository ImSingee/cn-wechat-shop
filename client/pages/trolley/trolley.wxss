.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 50rpx;
  font-size: 32rpx;
}

.top .circle{
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  background-color: white;
}

.top .circle.yellow {
  background-color: #F5E069;
}

.top .circle image {
  margin: 10rpx 5rpx;
  width: 33rpx;
  height: 24rpx;
}

.top .edit {
  flex-grow: 1;
  text-align: right;
}

.middle {
  margin-bottom: 80rpx;
}

.middle .item {
  display: flex;
  flex-direction: center;
  align-items: center;
  margin: 20rpx 40rpx;
  padding: 30rpx;
  border-radius: 30rpx; 
  background-color: white;
}

.middle .item .check {
  width: 44rpx;
  height: 44rpx;
  border-radius: 44rpx;
  background-color: rgb(236, 236, 238);
}

.middle .item .check image {
  width: 33rpx;
  height: 24rpx;
  margin: 10rpx 5rpx;
}

.middle .item .image {
  width: 200rpx;
  margin: 0 30rpx;
}

.middle .item .info {
  align-self: flex-start;
  flex-grow: 1;
}

.middle .item .info .name {
  opacity: 0.7;
}

.middle .item .number {
  align-self: flex-end;
}

.middle .item .number .editing {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.middle .item .number .editing .text {
  margin: 0 10rpx;
}

.middle .item .number .editing button {
  font-size: 30rpx;
  text-align: center;
  padding: 0;
  line-height: 30rpx;
  background-color: white;
  border: 1px solid rgb(245, 224, 105);
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

.middle .item .number .editing button:after {
  border:none;
  padding: 0;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background-color: white;
  height: 80rpx;

  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;

  font-size: 36rpx;
}

.bottom .label {
  opacity: 0.7; 
  font-size: 28rpx;
}

.bottom .price {
  margin: 0 30rpx;
}

.bottom button {
  margin: 0;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #F5E069;
  color: #34373D;
  border-radius: 0;
}

.bottom button:disabled {
  color: rgba(52, 55, 61, 0.5);
}

.bottom button::after {
  border: none;
}